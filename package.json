{
  "name": "nest-l",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "webpack:dev": "rimraf dist && webpack --config ./bin/webpack.dev.js",
    "format": "prettier --write \"server/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register server/main.ts",
    "start:dev": "concurrently --handle-input \"nodemon --config nodemon-dist.json\" \"wait-on server-dist/main.js && nodemon --config nodemon-server.json\" \"tsc -w -p tsconfig.build.json\"",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf server-dist && npm run build",
    "start:prod": "node server-dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.5.2",
    "dotenv": "^8.0.0",
    "ejs": "^2.6.2",
    "joi": "^14.3.1",
    "mysql": "^2.17.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "css-loader": "^3.0.0",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "sass-loader": "^7.1.0",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3",
    "wait-on": "^3.2.0",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "server",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
